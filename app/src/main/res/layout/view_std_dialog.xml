<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/all_rounded_bg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/studentNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/baloo_bhai_2_medium"
            android:text="Student name"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="@+id/dialogFirstNameEd"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/dialogFirstNameEd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_text_bg"
            android:hint="First name"
            android:inputType="text"
            android:padding="15dp"
            android:textColorHint="@color/edHintColor"
            android:textCursorDrawable="@drawable/edit_text_cursor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/studentNameTv" />

        <EditText
            android:id="@+id/dialogLastNameEd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_text_bg"
            android:hint="Last name"
            android:inputType="text"
            android:padding="15dp"
            android:textColorHint="@color/edHintColor"
            android:textCursorDrawable="@drawable/edit_text_cursor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialogFirstNameEd" />

        <TextView
            android:id="@+id/rollNoAndClassTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/baloo_bhai_2_medium"
            android:text="Roll no and class"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="@+id/dialogRollNoEd"
            app:layout_constraintTop_toBottomOf="@+id/dialogLastNameEd" />

        <EditText
            android:id="@+id/dialogRollNoEd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_text_bg"
            android:hint="Roll number"
            android:inputType="text"
            android:padding="15dp"
            android:textColorHint="@color/edHintColor"
            android:textCursorDrawable="@drawable/edit_text_cursor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rollNoAndClassTv" />

        <EditText
            android:id="@+id/dialogClassNameEd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_text_bg"
            android:hint="Class name"
            android:inputType="text"
            android:padding="15dp"
            android:textColorHint="@color/edHintColor"
            android:textCursorDrawable="@drawable/edit_text_cursor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialogRollNoEd" />


        <TextView
            android:id="@+id/contactNumberTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/baloo_bhai_2_medium"
            android:text="Contact number"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="@+id/dialogRollNoEd"
            app:layout_constraintTop_toBottomOf="@+id/dialogClassNameEd" />

        <EditText
            android:id="@+id/dialogContactNumberEd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_text_bg"
            android:hint="Contact number"
            android:inputType="text"
            android:padding="15dp"
            android:textColorHint="@color/edHintColor"
            android:textCursorDrawable="@drawable/edit_text_cursor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/contactNumberTv" />

        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="5dp"
            android:backgroundTint="@color/btnBgColor"
            android:fontFamily="@font/baloo_bhai_2_medium"
            android:text="Cancel"
            android:textColor="@color/white"
            android:textSize="25dp"
            app:cornerRadius="10dp"
            app:layout_constraintEnd_toStartOf="@+id/saveBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialogContactNumberEd"
            app:rippleColor="@color/btnHoverColor" />

        <Button
            android:id="@+id/saveBtn"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/btnBgColor"
            android:fontFamily="@font/baloo_bhai_2_medium"
            android:text="Save"
            android:textColor="@color/white"
            android:textSize="25dp"
            app:cornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/cancelBtn"
            app:layout_constraintTop_toBottomOf="@+id/dialogContactNumberEd"
            app:rippleColor="@color/btnHoverColor" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>